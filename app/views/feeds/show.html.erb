<h1>Welcome <%= current_user.username %>!</h1>

<div id='content' class="col-xs-6 col-xs-offset-3">
<%= render "tweets/form" %>
<b>Your Feed!</b>
<div class="infinite-tweets">
    <script type"text/template" id="tweet-template">
    <%% tweets.forEach(function (tweet) { %>
      <li>
        <%%= tweet.content %>
        -- <a href="<%%= "/users/" + tweet.user.id %>"><%%= tweet.user.username %></a>
        -- <%%= tweet.created_at %>
        <ul>
          <%% tweet.mentions.forEach(function (mention) { %>
            <li>
              <a href="<%%= "/users/" + mention.user_id %>"><%%= mention.user.username %></a>
            </li>
          <%% }); %>
        </ul>
      </li>
    <%% }); %> 
    </script>
<ul class="tweets" id="feed">
</ul>
  <a class="fetch-more" href="javascript:void(0)">Fetch Tweets</a>
</div>

</div>